@{
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
}
@model AF.Nop.Plugins.XmlUpdate.Models.ProviderModel
@using Nop.Web.Framework;



@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("AF.XmlUpdate.Provider.Update")
            @Html.ActionLink("( Back )", "ConfigureMiscPlugin", "Plugin", new { systemName = "AF.Nop.Plugins.XmlUpdate", area = "Admin" }, null)
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="t-button">@T("Admin.Common.Save")</button>
            <span id="provider-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>

    @Html.Partial("~/Plugins/AF.Nop.Plugins.XmlUpdate/Views/_AddOrUpdateProvider.cshtml", Model)
}

@Html.DeleteConfirmation("provider-delete")