@{
    Layout = "";
}
@model Nop.Plugin.Misc.UpdateFromExcel.Models.UpdateFromExcelModel
@using Nop.Web.Framework;
@using (Html.BeginForm("UpdateFromExcelPopup", "UpdateFromExcel", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table style="text-align: left;">
            @if (Model.Message != "")
            { 
                <tr>
                    <td colspan="2">
                        <p style="color:red;">@Model.Message</p>
                    </td>
                </tr>
            }
        <tr>
            <td class="adminTitle">
                @Html.LabelFor(m => m.ManufacturerId):
            </td>
            <td class="adminData">
                @Html.DropDownListFor(m => m.ManufacturerId, Model.AvailableManufacturers)
                @Html.ValidationMessageFor(m => m.ManufacturerId)
            </td>
        <tr>
            <td>
                @T("Admin.Common.ExcelFile"):
            </td>
            <td>
                <input type="file" id="importexcelfile" name="importexcelfile" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="t-button" value="@T("Admin.Common.ImportFromExcel")" />
            </td>
        </tr>
    </table>
    }