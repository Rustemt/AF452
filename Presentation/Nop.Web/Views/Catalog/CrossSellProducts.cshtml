@model IList<ProductModel>
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
   <div id="suggest">
      <h1>@T("ShoppingCart.MayWeSuggest")</h1>
      <ul class="clearfix">
      @foreach (var item in Model)
      {
        <li>
          <div class="suggestImage"><a href="@Url.RouteUrl("Product", new { productId = item.Id, SeName = item.SeName })"><img src="@item.DefaultPictureModel.ImageUrl" alt="@item.DefaultPictureModel.AlternateText" /></a></div>
          <div class="suggestDetails">
            <h4><a href="@Url.RouteUrl("Product", new { productId = item.Id, SeName = item.SeName })">@item.Manufacturer</a></h4>
            <h5><a href="@Url.RouteUrl("Product", new { productId = item.Id, SeName = item.SeName })">@item.Name</a></h5>
            @*<p><a href="javascript:;">@item.ProductPrice.Price</a></p>*@
          </div>
        </li>
      }
      </ul>
    </div>
}