@model List<Nop.Web.Models.ShoppingCart.WishlistModel.ShoppingCartItemModel>


@*<script src="@Url.Content("~/Scripts/wishlist.js")" type="text/javascript"></script>*@

<script language="javascript" type="text/javascript">

       var _removeItemUrl ='@Url.Action("DeleteWishListCartItem", "ShoppingCart")';
       var _buySelectedUrl = '@Url.Action("AddToCartSelected", "ShoppingCart")';
</script>
             

            @{
               int count = Model.Count;
               int i = 0;
               for(i=0;i<count-(count%2-0);i++)
               {
                
            	<!-- wished item row -->
            	<div class="wishedItemRow clearfix">
                <input type="hidden" id="NotSelectedItem" value="@T("Wishlist.NoSelectedItem")" />
                	<!-- wished item -->
                    

                    <div class="wishedItem">
                    	@Html.Partial("WishListProduct",Model[i])
                    </div>
                    <!-- wished item end -->
                    @{i++;
                      if (i == (count - (count % 2 - 0)))
                      {
                          @:</div>
                          break;
                      }
                     }
                	<!-- wished item -->
                    <div class="wishedItem even">
                    @Html.Partial("WishListProduct", Model[i])
                    </div>
                    <!-- wished item end -->
                </div>
                <!-- wished item row end -->
                }
            	<!-- wished item row -->
                while(i<Model.Count)
                {
            	<div class="wishedItemRow last clearfix">

                	<!-- wished item -->
                    <div class="wishedItem">
                    @Html.Partial("WishListProduct", Model[i])	
                    </div>
                    <!-- wished item end -->
                    @{i++;
                      if (i == Model.Count)
                      {
                           @:</div>
                          break;
                      }
                     }
                	<!-- wished item -->
                    <div class="wishedItem even">
                    @Html.Partial("WishListProduct", Model[i])
                    </div>
                     @{i++;
                       if (i == Model.Count)
                       {
                            @:</div>
                           break;
                       }
                     }
                    <!-- wished item end -->
                </div>
                }
                <!-- wished item row end -->

            }

           
