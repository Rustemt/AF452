@model NewsItemListModel
@using Nop.Core.Domain.Catalog
@using Nop.Core.Infrastructure
@using Nop.Services.Catalog
@using Nop.Web.Models.News
@if (Model.MainNewsItems.Count > 0)
{
    var news = Model.MainNewsItems.First();
    <div id="announcement" style="background-color: rgb(42, 30, 52);">
        <dl class="clearfix">
            <dt>@Html.Raw(news.Full)</dt>
            <dd>@*<a href="javascript:;" title="close">@T("Common.Close")</a>*@</dd>
        </dl>
    </div>
}